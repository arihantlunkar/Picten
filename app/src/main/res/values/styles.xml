<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/tab_text_size</item>
    </style>

    <style name="BottomNavigationButtonAppearance" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="colorButtonNormal">@color/colorBottomNavigationButtonIcon</item>
        <item name="colorControlHighlight">@color/colorBottomNavigationOnTouch</item>
        <item name="android:textColor">@color/colorBottomNavigationButtonText</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/bottom_navigation_button_text_size</item>
        <item name="android:padding">@dimen/navigation_bottom_button_padding</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@color/colorBottomNavigationButtonBackground</item>
    </style>

    <style name="MovieNameTextAppearance">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/movie_name_text_size</item>
        <item name="android:textColor">@color/colorMovieName</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WatchMovieButtonAppearance" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorWatchMovieButton</item>
        <item name="android:bottomRightRadius">5dp</item>
        <item name="android:bottomLeftRadius">5dp</item>
        <item name="android:topLeftRadius">5dp</item>
        <item name="android:topRightRadius">5dp</item>
    </style>

    <style name="WatchNowButtonTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorWatchMovieButtonText</item>
    </style>

</resources>
