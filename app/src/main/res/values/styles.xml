<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="MyCustomButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="colorButtonNormal">@color/colorViewPagerBackground</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/MyCustomTextAppearance</item>
        <item name="android:padding">8dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@color/colorViewPagerBackground</item>
    </style>

    <style name="MyCustomNetflixPlayButton" parent="MyCustomButton">
        <item name="colorButtonNormal">@color/colorNetflixLogo</item>
        <item name="android:background">@color/colorNetflixLogo</item>
        <item name="android:textColor">@color/colorOnSelection</item>
    </style>

    <style name="MyCustomAmazonPlayButton" parent="MyCustomButton">
        <item name="colorButtonNormal">@color/colorAmazonLogo</item>
        <item name="android:background">@color/colorAmazonLogo</item>
        <item name="android:textColor">@color/colorOnSelection</item>
    </style>

    <style name="MyCustomHotstarPlayButton" parent="MyCustomButton">
        <item name="colorButtonNormal">@color/colorHotstarLogo</item>
        <item name="android:background">@color/colorHotstarLogo</item>
        <item name="android:textColor">@color/colorOnSelection</item>
    </style>

</resources>
