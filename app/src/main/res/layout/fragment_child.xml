        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline1" />

    androidx.appcompat.widget.AppCompatButton
        android:id="@+id/play_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/play_on_netflix_text"
        android:drawableTop="@drawable/ic_play_24dp"
        style="@style/MyCustomButton"
        app:layout_constraintBottom_toTopOf="@id/guideline3"
        app:layout_constraintEnd_toStartOf="@id/watch_trailer_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline1" />

    <View
        android:id="@+id/guideline2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/colorBottomNavigationOnTouch"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toStartOf="@+id/watch_trailer_button"
        app:layout_constraintStart_toEndOf="@+id/play_button"
        app:layout_constraintTop_toBottomOf="@+id/guideline1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/watch_trailer_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/watch_trailer_text"
        android:drawableTop="@drawable/ic_watch_trailer_24dp"
        style="@style/MyCustomButton"
        app:layout_constraintBottom_toTopOf="@id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/play_button"
        app:layout_constraintTop_toBottomOf="@+id/guideline1" />

    <View
        android:id="@+id/guideline3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorGuideLine"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/watch_trailer_button" />

